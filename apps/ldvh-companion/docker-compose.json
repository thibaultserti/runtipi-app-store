{
  "schemaVersion": 2,
  "services": [
    {
      "name": "ldvh-companion",
      "image": "ghcr.io/thibaultserti/ldvh-companion:main",
      "internalPort": 8080,
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/ldvh-companion",
          "containerPath": "/app/data",
          "readOnly": false
        }
      ],
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "sqlite:///data/ldvh_companion.db"
        }
      ]
    }
  ]
}
