
{
  "services": [
    {
      "name": "ldvh-companion",
      "image": "ghcr.io/thibaultserti/ldvh-companion:main",
      "isMain": true,

      "internalPort": "8080",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/ldvh-companion",
          "containerPath": "/app/data"
        }
      ],
      "environment": {
        "DATABASE_URL": "sqlite:///data/ldvh_companion.db"
      }
    }
  ]
}