{
  "services": [
    {
      "name": "ldvh-companion",
      "environment": {
        "DATABASE_URL": "sqlite:///data/ldvh_companion.db"
      },
      "internalPort": 8080,
      "volumes": [
        {
          "hostPath": "./data",
          "containerPath": "/app/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "CMD curl -f http://localhost:8080/",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3,
        "start_period": "40s"
      }
    }
  ]
}